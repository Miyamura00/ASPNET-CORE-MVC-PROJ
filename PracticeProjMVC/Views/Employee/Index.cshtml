@model IEnumerable<EmployeeModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="AddEmp" class="btn btn-primary">
                <i class="bi bi-person-plus-fill"></i> &nbsp; Add Employee
            </a>
        </div>
    </div>
    <br /> <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Full Name
                </th>
                <th>
                    Job Role
                </th>
                <th>
                    Salary Pay
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="25%">
                        @obj.Fullname
                    </td>
                    <td width="25%">
                        @obj.JobRole
                    </td>
                    <td width="25%">
                        @obj.SalaryPay
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Employee" asp-action="EditEmp" asp-route-id="@obj.Id"
                                class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Employee" asp-action="DelEmp" asp-route-id="@obj.Id"
                                class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>